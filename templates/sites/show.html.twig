{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ site.name }}</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered" id="radios-table">
                <thead>
                <tr>
                    <th>Radio</th>
                    <th>SSID</th>
                    <th>Number of Clients</th>
                    <th>Frequency</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for radio in site.radios %}
                    <tr>
                        <td>{{ radio.name }}</td>
                        <td>{{ radio.ssid }}</td>
                        <th>{{ radio.numberOfClients }}</th>
                        <td>{{ radio.frequency }} mhz</td>
                        <td>
                            <a href="/site/{{ site.name|lower }}/{{ radio.name|lower }}" class="btn btn-success">View Clients</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}